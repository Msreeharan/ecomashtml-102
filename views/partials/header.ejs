<!-- Header Section Start -->
<header style="background: #fff; box-shadow: 0 2px 5px rgba(0,0,0,0.1); position: sticky; top: 0; z-index: 999;">
    <div
        style="max-width: 1140px; margin: auto; display: flex; justify-content: space-between; align-items: center; padding: 10px 20px;">
        <div class="logo">
            <a href="/" style="display: inline-block;">
                <img src="/assets/img/logo/logo.jpg" alt="logo-img" style="height: 50px;">
            </a>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobileMenuBtn" style="font-size: 26px; background: none; border: none; display: none;">☰</button>

        <!-- Desktop Menu -->
        <nav id="desktopMenu" style="display: flex; gap: 20px;">
            <a href="/" style="text-decoration: none; color: #333;">Home</a>
            <a href="/about" style="text-decoration: none; color: #333;">About</a>
            <a href="/Booking" style="text-decoration: none; color: #333;">Booking</a>
